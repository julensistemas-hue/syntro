        const targetTab = tab.getAttribute('data-tab');

        // Remove active class from all tabs
        tabs.forEach(t => {
          t.classList.remove('active', 'bg-[#0052cc]', 'text-white');
          t.classList.add('text-base-800', 'hover:bg-base-200');
