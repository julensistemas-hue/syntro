    const demoTitle = document.getElementById('demo-title');
    const demoPrice = document.getElementById('demo-price');
    const demoButton = document.getElementById('demo-button');
    const connectionCable = document.getElementById('connection-cable');
    const resetDemoButton = document.getElementById('reset-demo-button');
    const particles = [
      document.getElementById('particle1'),
      document.getElementById('particle2'),
      document.getElementById('particle3')
    ];

    let isPlaying = false;
    const INITIAL_TITLE = 'Soluciones Digitales';
    const INITIAL_PRICE = '‚Ç¨199';
    const INITIAL_BUTTON_COLOR = 'linear-gradient(to right, #3b82f6, #06b6d4)';

    function addMessage(text: string, isUser = true) {
      if (!chatMessages) return;

      const msgDiv = document.createElement('div');
      msgDiv.className = isUser ? 'flex justify-end mb-3' : 'flex justify-start mb-3';

      const time = new Date().toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });

      msgDiv.innerHTML = `
        <div class="${isUser ? 'bg-[#d9fdd3]' : 'bg-white'} rounded-lg px-3 py-2 max-w-[85%] shadow-sm">
          <p class="text-base" style="color: #000000;">${text}</p>
          <span class="text-xs text-gray-600 float-right mt-1">${time}${isUser ? '' : ' ‚úì‚úì'}</span>
        </div>
      `;

      chatMessages.appendChild(msgDiv);

      if (chatContainer) {
        chatContainer.scrollTop = chatContainer.scrollHeight;
      }
    }

    function typeMessage(text: string, callback: () => void) {
      if (!chatInput) return;

      let i = 0;
      (chatInput as HTMLInputElement).value = '';
      chatInput.focus();

      const typingInterval = setInterval(() => {
        if (i < text.length) {
          (chatInput as HTMLInputElement).value += text[i];
          i++;
        } else {
          clearInterval(typingInterval);
          if (callback) callback();
        }
      }, 80);
    }

    function showCableAnimation(targetType = 'title') {
      if (!connectionCable) return;

      const cablePath = document.getElementById('cablePath');
      if (cablePath) {
        if (targetType === 'title') {
          cablePath.setAttribute('d', 'M 350 500 Q 500 350, 650 500');
        } else if (targetType === 'button') {
          cablePath.setAttribute('d', 'M 350 550 Q 500 400, 650 550');
        }
      }

      connectionCable.classList.remove('hidden');

      let opacity = 0;
      const fadeIn = setInterval(() => {
        if (opacity < 1) {
          opacity += 0.05;
          connectionCable.style.opacity = String(opacity);
        } else {
          clearInterval(fadeIn);
        }
      }, 30);

      particles.forEach(p => {
        if (p) p.setAttribute('opacity', '1');
      });
    }

    function hideCableAnimation() {
      if (!connectionCable) return;

      particles.forEach(p => {
        if (p) p.setAttribute('opacity', '0');
      });

      let opacity = 1;
      const fadeOut = setInterval(() => {
        if (opacity > 0) {
          opacity -= 0.05;
          connectionCable.style.opacity = String(opacity);
        } else {
          clearInterval(fadeOut);
          connectionCable.classList.add('hidden');
        }
      }, 30);
    }

    function updateWebsite(type: string, value: string) {
      if (type === 'title' && demoTitle) {
        demoTitle.style.transform = 'scale(0.9)';
        demoTitle.style.opacity = '0.3';
        setTimeout(() => {
          demoTitle.textContent = value;
          demoTitle.style.transform = 'scale(1)';
          demoTitle.style.opacity = '1';
        }, 300);
      } else if (type === 'price' && demoPrice) {
        demoPrice.style.transform = 'scale(0.9) rotate(-5deg)';
        demoPrice.style.opacity = '0.3';
        setTimeout(() => {
          demoPrice.textContent = value;
          demoPrice.style.transform = 'scale(1) rotate(0deg)';
          demoPrice.style.opacity = '1';
        }, 300);
      } else if (type === 'button' && demoButton) {
        demoButton.style.transform = 'scale(0.9)';
        demoButton.style.opacity = '0.5';
        setTimeout(() => {
          demoButton.style.background = value;
          demoButton.style.transform = 'scale(1)';
          demoButton.style.opacity = '1';
        }, 300);
      }
    }

    async function runDemo() {
      if (isPlaying) return;
      isPlaying = true;

      if (chatInput) (chatInput as HTMLInputElement).disabled = true;
      if (sendButton) (sendButton as HTMLButtonElement).disabled = true;

      if (chatMessages) chatMessages.innerHTML = '';

      const demoMessage1 = 'Cambia el t√≠tulo a "Tu Negocio Online"';

      await new Promise<void>(resolve => {
        typeMessage(demoMessage1, resolve);
      });

      await new Promise(resolve => setTimeout(resolve, 500));

      if (chatInput) (chatInput as HTMLInputElement).value = '';
      addMessage(demoMessage1, true);

      await new Promise(resolve => setTimeout(resolve, 800));

      showCableAnimation('title');

      await new Promise(resolve => setTimeout(resolve, 1200));

      updateWebsite('title', 'Tu Negocio Online');

      await new Promise(resolve => setTimeout(resolve, 1500));

      hideCableAnimation();

      await new Promise(resolve => setTimeout(resolve, 600));

      addMessage('‚úÖ Cambio finalizado. El t√≠tulo ha sido actualizado correctamente.', false);

      await new Promise(resolve => setTimeout(resolve, 1500));

      const demoMessage2 = 'Cambia el bot√≥n a color verde';

      await new Promise<void>(resolve => {
        typeMessage(demoMessage2, resolve);
      });

      await new Promise(resolve => setTimeout(resolve, 500));

      if (chatInput) (chatInput as HTMLInputElement).value = '';
      addMessage(demoMessage2, true);

      await new Promise(resolve => setTimeout(resolve, 800));

      showCableAnimation('button');

      await new Promise(resolve => setTimeout(resolve, 1200));

      updateWebsite('button', 'linear-gradient(to right, #10b981, #059669)');

      await new Promise(resolve => setTimeout(resolve, 1500));

      hideCableAnimation();

      await new Promise(resolve => setTimeout(resolve, 600));

      addMessage('‚úÖ Listo. El bot√≥n ahora es verde.', false);

      if (resetDemoButton) {
        resetDemoButton.classList.remove('hidden');
      }

      isPlaying = false;
    }

    function resetDemo() {
      if (demoTitle) {
        demoTitle.textContent = INITIAL_TITLE;
        demoTitle.style.transform = 'scale(1)';
        demoTitle.style.opacity = '1';
      }

      if (demoPrice) {
        demoPrice.textContent = INITIAL_PRICE;
        demoPrice.style.transform = 'scale(1) rotate(0deg)';
        demoPrice.style.opacity = '1';
      }

      if (demoButton) {
        demoButton.style.background = INITIAL_BUTTON_COLOR;
        demoButton.style.transform = 'scale(1)';
        demoButton.style.opacity = '1';
      }

      if (chatMessages) chatMessages.innerHTML = '';
      if (chatInput) {
        (chatInput as HTMLInputElement).value = '';
        (chatInput as HTMLInputElement).disabled = false;
      }
      if (sendButton) (sendButton as HTMLButtonElement).disabled = false;

      if (resetDemoButton) {
        resetDemoButton.classList.add('hidden');
      }

      setTimeout(() => {
        runDemo();
      }, 300);
    }

    const demoSection = document.querySelector('#whatsapp-demo-section');
    let hasAutoPlayed = false;

    if (demoSection) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && !hasAutoPlayed && !isPlaying) {
            hasAutoPlayed = true;
            setTimeout(() => {
              runDemo();
            }, 1000);
          }
        });
      }, {
        threshold: 0.3
      });

      observer.observe(demoSection);
    }

    if (resetDemoButton) {
      resetDemoButton.addEventListener('click', resetDemo);
    }
  </script>

