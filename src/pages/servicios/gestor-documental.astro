<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchForm = document.getElementById('doc-search-form') as HTMLFormElement;
    const searchInput = document.getElementById('doc-search-input') as HTMLInputElement;
    const resultsContainer = document.getElementById('doc-results') as HTMLDivElement;

    if (!searchForm || !searchInput || !resultsContainer) return;

    // Documentos de ejemplo
    const documents = [
      {
        title: 'Pol√≠tica de Teletrabajo 2024',
        category: 'Recursos Humanos',
        excerpt: 'Los empleados pueden trabajar de forma remota hasta 3 d√≠as por semana previa aprobaci√≥n del supervisor directo. Se requiere disponibilidad durante horario laboral y buena conexi√≥n a internet.',
        relevance: 95
      },
      {
        title: 'Manual de Procedimientos - Compras',
        category: 'Administraci√≥n',
        excerpt: 'Las solicitudes de compra superiores a ‚Ç¨500 requieren aprobaci√≥n del departamento de finanzas. Completar formulario FC-102 y adjuntar 3 cotizaciones.',
        relevance: 88
      },
      {
        title: 'Pol√≠tica de Vacaciones',
        category: 'Recursos Humanos',
        excerpt: 'Los empleados tienen derecho a 22 d√≠as laborables de vacaciones anuales. Las solicitudes deben presentarse con 15 d√≠as de antelaci√≥n a trav√©s del portal de RRHH.',
        relevance: 92
      }
    ];

    const queries: Record<string, string[]> = {
      'teletrabajo': ['Pol√≠tica de Teletrabajo 2024'],
      'remoto': ['Pol√≠tica de Teletrabajo 2024'],
      'vacaciones': ['Pol√≠tica de Vacaciones'],
      'compra': ['Manual de Procedimientos - Compras'],
      'default': ['Pol√≠tica de Teletrabajo 2024', 'Pol√≠tica de Vacaciones']
    };

    function showResults(query: string) {
      resultsContainer.innerHTML = '';

      // Loading state
      resultsContainer.innerHTML = `
        <div class="text-center py-8">
          <div class="inline-flex items-center gap-2 text-accent-600">
            <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Buscando en 1,247 documentos...</span>
          </div>
        </div>
      `;

      setTimeout(() => {
        const lowerQuery = query.toLowerCase();
        let relevantDocs = documents;

        // Filtrar documentos relevantes
        if (lowerQuery.includes('teletrabajo') || lowerQuery.includes('remoto')) {
          relevantDocs = [documents[0]];
        } else if (lowerQuery.includes('vacaciones')) {
          relevantDocs = [documents[2]];
        } else if (lowerQuery.includes('compra')) {
          relevantDocs = [documents[1]];
        }

        resultsContainer.innerHTML = `
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
            <div class="flex items-center gap-2 text-blue-800 text-sm font-medium">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              Encontr√© ${relevantDocs.length} documento${relevantDocs.length > 1 ? 's' : ''} relevante${relevantDocs.length > 1 ? 's' : ''}
            </div>
          </div>
        `;

        relevantDocs.forEach(doc => {
          const docCard = `
            <div class="bg-white border border-base-200 rounded-xl p-6 hover:border-accent-300 hover:shadow-lg transition-all duration-200 cursor-pointer">
              <div class="flex items-start justify-between mb-3">
                <div>
                  <h3 class="text-lg font-semibold text-base-900 mb-1">${doc.title}</h3>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-accent-100 text-accent-700">
                    ${doc.category}
                  </span>
                </div>
                <div class="flex flex-col items-end">
                  <span class="text-sm font-medium text-green-600">${doc.relevance}% relevante</span>
                </div>
              </div>
              <p class="text-base-600 mb-4">${doc.excerpt}</p>
              <div class="flex items-center gap-4 text-sm text-base-500">
                <button class="flex items-center gap-1 hover:text-accent-600 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  Ver documento
                </button>
                <button class="flex items-center gap-1 hover:text-accent-600 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                  Copiar extracto
                </button>
              </div>
            </div>
          `;
          resultsContainer.innerHTML += docCard;
        });
      }, 800);
    }

    searchForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const query = searchInput.value.trim();
      if (!query) return;

      showResults(query);
    });
  });
</script>