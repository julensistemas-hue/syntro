  <script>
    // Before/After Comparison Slider
    const container = document.getElementById('comparison-container');
    const beforeImageContainer = document.getElementById('before-image-container');
    const sliderHandle = document.getElementById('slider-handle');
    const wordpressLabel = document.getElementById('wordpress-label');
    const codigoIaLabel = document.getElementById('codigo-ia-label');
    const progressBar = document.getElementById('progress-bar');
    const progressPercentage = document.getElementById('progress-percentage');

    if (container && beforeImageContainer && sliderHandle) {
      let isDragging = false;
      let isAutoPlaying = false; // Start paused
      let animationId: number | null = null;
      let direction = 1; // 1 for right, -1 for left
      let currentPercentage = 0; // Start at WordPress (0%)
      let isPaused = false;
      let pauseTimeout: number | null = null;

      function updateLabelHighlight(percentage: number) {
        if (!wordpressLabel || !codigoIaLabel) return;

        if (percentage <= 10) {
          // At WordPress side - illuminate WordPress label
          wordpressLabel.style.background = 'rgba(59, 130, 246, 0.3)';
          wordpressLabel.style.borderColor = 'rgb(59, 130, 246)';
          wordpressLabel.style.boxShadow = '0 0 20px rgba(59, 130, 246, 0.6)';
          wordpressLabel.style.transform = 'scale(1.05)';

          codigoIaLabel.style.background = 'rgba(255, 255, 255, 0.1)';
          codigoIaLabel.style.borderColor = 'rgba(255, 255, 255, 0.2)';
          codigoIaLabel.style.boxShadow = 'none';
          codigoIaLabel.style.transform = 'scale(1)';
        } else if (percentage >= 90) {
          // At C√≥digo IA side - illuminate C√≥digo IA label
          codigoIaLabel.style.background = 'rgba(34, 197, 94, 0.3)';
          codigoIaLabel.style.borderColor = 'rgb(34, 197, 94)';
          codigoIaLabel.style.boxShadow = '0 0 20px rgba(34, 197, 94, 0.6)';
          codigoIaLabel.style.transform = 'scale(1.05)';

          wordpressLabel.style.background = 'rgba(255, 255, 255, 0.1)';
          wordpressLabel.style.borderColor = 'rgba(255, 255, 255, 0.2)';
          wordpressLabel.style.boxShadow = 'none';
          wordpressLabel.style.transform = 'scale(1)';
        } else {
          // In the middle - reset both
          wordpressLabel.style.background = 'rgba(255, 255, 255, 0.1)';
          wordpressLabel.style.borderColor = 'rgba(255, 255, 255, 0.2)';
          wordpressLabel.style.boxShadow = 'none';
          wordpressLabel.style.transform = 'scale(1)';

          codigoIaLabel.style.background = 'rgba(255, 255, 255, 0.2)';
          codigoIaLabel.style.borderColor = 'rgba(255, 255, 255, 0.2)';
          codigoIaLabel.style.boxShadow = 'none';
          codigoIaLabel.style.transform = 'scale(1)';
        }
      }

      function updateSliderByPercentage(percentage: number) {
        // Clamp between 0 and 100
        percentage = Math.max(0, Math.min(100, percentage));

        // Update slider position
        sliderHandle.style.left = `${percentage}%`;

        // Update clip-path for before image (show from left edge to slider)
        beforeImageContainer.style.clipPath = `inset(0 ${100 - percentage}% 0 0)`;

        currentPercentage = percentage;

        // Update progress bar
        if (progressBar) {
          progressBar.style.width = `${percentage}%`;
        }

        // Update progress percentage text
        if (progressPercentage) {
          progressPercentage.textContent = `${Math.round(percentage)}%`;
        }

        // Update label highlights based on position
        updateLabelHighlight(percentage);
      }

      function updateSlider(clientX: number) {
        const containerRect = container.getBoundingClientRect();
        const containerWidth = containerRect.width;
        const offsetX = clientX - containerRect.left;

        // Calculate percentage (0-100)
        let percentage = (offsetX / containerWidth) * 100;

        updateSliderByPercentage(percentage);
      }

      function animate() {
        if (!isAutoPlaying || isPaused) return;

        // Move slider
        currentPercentage += direction * 0.15; // Speed of animation

        // Reverse direction at boundaries with pause
        if (currentPercentage >= 100) {
          currentPercentage = 100;
          isPaused = true;
          updateSliderByPercentage(currentPercentage);

          // Pause for 2 seconds at C√≥digo IA side
          pauseTimeout = window.setTimeout(() => {
            isPaused = false;
            direction = -1;
            if (isAutoPlaying) {
              animate();
            }
          }, 2000);
          return;
        } else if (currentPercentage <= 0) {
          currentPercentage = 0;
          isPaused = true;
          updateSliderByPercentage(currentPercentage);

          // Pause for 2 seconds at WordPress side
          pauseTimeout = window.setTimeout(() => {
            isPaused = false;
            direction = 1;
            if (isAutoPlaying) {
              animate();
            }
          }, 2000);
          return;
        }

        updateSliderByPercentage(currentPercentage);

        animationId = requestAnimationFrame(animate);
      }

      function stopAutoPlay() {
        isAutoPlaying = false;
        isPaused = false;
        if (animationId !== null) {
          cancelAnimationFrame(animationId);
          animationId = null;
        }
        if (pauseTimeout !== null) {
          clearTimeout(pauseTimeout);
          pauseTimeout = null;
        }
      }

      function startAutoPlay() {
        if (!isAutoPlaying) {
          isAutoPlaying = true;
          isPaused = false;
          animate();
        }
      }

      // Initialize at WordPress side (0%) with highlight
      updateSliderByPercentage(0);

      // Start animation after 1.4 seconds delay
      setTimeout(() => {
        isAutoPlaying = true;
        animate();
      }, 1400);

      // Mouse events
      sliderHandle.addEventListener('mousedown', (e) => {
        isDragging = true;
        stopAutoPlay();
        e.preventDefault();
      });

      document.addEventListener('mousemove', (e) => {
        if (isDragging) {
          updateSlider(e.clientX);
        }
      });

      document.addEventListener('mouseup', () => {
        if (isDragging) {
          isDragging = false;
          // Resume auto-play after 2 seconds of inactivity
          setTimeout(() => {
            if (!isDragging) {
              startAutoPlay();
            }
          }, 2000);
        }
      });

      // Touch events for mobile
      sliderHandle.addEventListener('touchstart', (e) => {
        isDragging = true;
        stopAutoPlay();
        e.preventDefault();
      });

      document.addEventListener('touchmove', (e) => {
        if (isDragging && e.touches[0]) {
          updateSlider(e.touches[0].clientX);
        }
      });

      document.addEventListener('touchend', () => {
        if (isDragging) {
          isDragging = false;
          // Resume auto-play after 2 seconds of inactivity
          setTimeout(() => {
            if (!isDragging) {
              startAutoPlay();
            }
          }, 2000);
        }
      });

      // Click anywhere on container to move slider
      container.addEventListener('click', (e) => {
        stopAutoPlay();
        updateSlider(e.clientX);
        // Resume auto-play after 2 seconds
        setTimeout(() => {
          if (!isDragging) {
            startAutoPlay();
          }
        }, 2000);
      });

      // Pause animation when mouse enters, resume when leaves
      container.addEventListener('mouseenter', () => {
        if (!isDragging) {
          stopAutoPlay();
        }
      });

      container.addEventListener('mouseleave', () => {
        if (!isDragging) {
          startAutoPlay();
        }
      });
    }
  </script>

