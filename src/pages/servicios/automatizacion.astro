        'hours-value': data.hoursValue,
        'hours-period': data.hoursPeriod,
        'tasks-label': data.tasksLabel,
        'tasks-value': data.tasksValue,
        'tasks-period': data.tasksPeriod,
        'errors-label': data.errorsLabel,
        'errors-value': data.errorsValue,
        'errors-period': data.errorsPeriod
      };

      Object.entries(elements).forEach(([id, value]) => {
        const element = document.getElementById(id);
        if (element) {
          // Forzar la animaci√≥n siempre (incluso si el valor es igual)
          // Fade out
          element.style.opacity = '0';
          element.style.transform = 'translateY(10px)';
          element.style.transition = 'all 0.3s ease';

          setTimeout(() => {
            // Siempre actualizar el contenido para forzar el re-render
            const currentValue = element.textContent;
            element.textContent = '';
            // Usar requestAnimationFrame para asegurar el re-render
            requestAnimationFrame(() => {
              element.textContent = value;
              // Fade in
              element.style.opacity = '1';
              element.style.transform = 'translateY(0)';
            });
          }, 300);
        }
      });
    }

    // Event listener para el selector
    if (periodSelector) {
      periodSelector.addEventListener('change', (e) => {
        const target = e.target as HTMLSelectElement;
        const period = target.value as 'month' | 'quarter' | 'year';
        updateMetrics(period);
      });
    }
  });
</script>
