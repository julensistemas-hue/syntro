<script>
  document.addEventListener('DOMContentLoaded', () => {
    const callButton = document.getElementById('call-button');
    const hangupButton = document.getElementById('hangup-button');
    const callStatus = document.getElementById('call-status');
    const callDuration = document.getElementById('call-duration');
    const durationText = document.getElementById('duration-text');
    const conversationLog = document.getElementById('conversation-log');
    const callOptions = document.getElementById('call-options');

    let isInCall = false;
    let callStartTime = 0;
    let durationInterval: number;

    const conversation = [
      { delay: 1000, speaker: 'AI', text: '¬°Hola! Bienvenido a Cl√≠nica Dental Dr. Garc√≠a. ¬øEn qu√© puedo ayudarte?' },
      { delay: 3000, speaker: 'User', text: 'Hola, quisiera reservar una cita' },
      { delay: 4500, speaker: 'AI', text: 'Por supuesto. ¬øQu√© d√≠a te vendr√≠a mejor?' },
      { delay: 6000, speaker: 'User', text: 'El pr√≥ximo martes por la ma√±ana' },
      { delay: 7500, speaker: 'AI', text: 'Perfecto. Tengo disponibilidad a las 10:00 y a las 11:30. ¬øCu√°l prefieres?' },
      { delay: 9000, speaker: 'User', text: 'A las 10:00 est√° bien' },
      { delay: 10500, speaker: 'AI', text: '¬°Excelente! He reservado tu cita para el martes a las 10:00. Te enviar√© un SMS de confirmaci√≥n. ¬øNecesitas algo m√°s?' },
    ];

    function addConversationLine(speaker: string, text: string) {
      if (!conversationLog) return;

      const line = document.createElement('div');
      line.className = `mb-2 ${speaker === 'AI' ? 'text-accent-400' : 'text-white'}`;
      line.innerHTML = `<span class="font-semibold">${speaker === 'AI' ? 'ü§ñ Asistente:' : 'üë§ T√∫:'}</span> ${text}`;
      conversationLog.appendChild(line);
      conversationLog.scrollTop = conversationLog.scrollHeight;
    }

    function updateDuration() {
      const elapsed = Math.floor((Date.now() - callStartTime) / 1000);
      const minutes = Math.floor(elapsed / 60).toString().padStart(2, '0');
      const seconds = (elapsed % 60).toString().padStart(2, '0');
      if (durationText) {
        durationText.textContent = `${minutes}:${seconds}`;
      }
    }

    function startCall() {
      isInCall = true;
      callStartTime = Date.now();

      // UI Updates
      if (callButton) callButton.classList.add('hidden');
      if (hangupButton) hangupButton.classList.remove('hidden');
      if (hangupButton) hangupButton.classList.add('flex');
      if (callStatus) callStatus.textContent = 'Conectando...';
      if (callDuration) callDuration.classList.remove('hidden');
      if (conversationLog) conversationLog.classList.remove('hidden');
      if (callOptions) callOptions.classList.remove('hidden');

      // Start duration counter
      durationInterval = setInterval(updateDuration, 1000) as unknown as number;

      // Simulate ringing
      setTimeout(() => {
        if (callStatus) callStatus.textContent = 'En llamada';
      }, 1500);

      // Play conversation
      conversation.forEach(line => {
        setTimeout(() => {
          if (isInCall) {
            addConversationLine(line.speaker, line.text);
          }
        }, line.delay);
      });
    }

    function endCall() {
      isInCall = false;
      clearInterval(durationInterval);

      // UI Updates
      if (callButton) callButton.classList.remove('hidden');
      if (hangupButton) hangupButton.classList.add('hidden');
      if (hangupButton) hangupButton.classList.remove('flex');
      if (callStatus) callStatus.textContent = 'Llamada finalizada';
      if (callOptions) callOptions.classList.add('hidden');

      // Reset after 2 seconds
      setTimeout(() => {
        if (callStatus) callStatus.textContent = 'Toca para llamar';
        if (callDuration) callDuration.classList.add('hidden');
        if (conversationLog) {
          conversationLog.classList.add('hidden');
          conversationLog.innerHTML = '';
        }
        if (durationText) durationText.textContent = '00:00';
      }, 2000);
    }

    if (callButton) {
      callButton.addEventListener('click', startCall);
    }

    if (hangupButton) {
      hangupButton.addEventListener('click', endCall);
    }
  });
</script>
