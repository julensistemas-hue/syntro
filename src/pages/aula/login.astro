---
import AulaAuthLayout from '../../layouts/AulaAuthLayout.astro';

// If user is already logged in, redirect to dashboard
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (accessToken) {
  return Astro.redirect('/aula');
}

const returnUrl = Astro.url.searchParams.get('returnUrl') || '/aula';
const error = Astro.url.searchParams.get('error');
const registered = Astro.url.searchParams.get('registered');
---

<AulaAuthLayout title="Iniciar Sesión - Aula Virtual" description="Accede al aula virtual de AI Security">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background: linear-gradient(135deg, #0f1419 0%, #1a1f26 50%, #0f1419 100%);">
    <div class="max-w-md w-full">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <img src="/logo.svg" alt="AI Security" class="h-12 w-auto mx-auto" />
        </a>
        <h1 class="mt-6 text-3xl font-bold" style="color: #ffffff;">
          Aula Virtual
        </h1>
        <p class="mt-2" style="color: #9ca3af;">
          Accede a tus cursos y contenido exclusivo
        </p>
      </div>

      <!-- Messages -->
      {error === 'config' && (
        <div class="mb-6 p-4 rounded-lg" style="background-color: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3);">
          <p class="text-sm" style="color: #fca5a5;">
            Error de configuración. Por favor, contacta con soporte.
          </p>
        </div>
      )}

      {error === 'invalid' && (
        <div class="mb-6 p-4 rounded-lg" style="background-color: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3);">
          <p class="text-sm" style="color: #fca5a5;">
            Email o contraseña incorrectos. Por favor, inténtalo de nuevo.
          </p>
        </div>
      )}

      {registered === 'true' && (
        <div class="mb-6 p-4 rounded-lg" style="background-color: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.3);">
          <p class="text-sm" style="color: #86efac;">
            ¡Cuenta creada correctamente! Ahora puedes iniciar sesión.
          </p>
        </div>
      )}

      <!-- Login Card -->
      <div class="rounded-2xl shadow-xl p-8" style="background-color: #1a1f26; border: 1px solid #2d3748;">
        <form id="login-form" class="space-y-6">
          <input type="hidden" name="returnUrl" value={returnUrl} />

          <div>
            <label for="email" class="block text-sm font-medium mb-2" style="color: #e5e7eb;">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              autocomplete="email"
              class="w-full px-4 py-3 rounded-lg transition-colors"
              style="background-color: #0f1419; border: 1px solid #374151; color: #ffffff;"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium mb-2" style="color: #e5e7eb;">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="current-password"
              minlength="6"
              class="w-full px-4 py-3 rounded-lg transition-colors"
              style="background-color: #0f1419; border: 1px solid #374151; color: #ffffff;"
              placeholder="••••••••"
            />
          </div>

          <div class="flex items-center justify-between">
            <label class="flex items-center">
              <input type="checkbox" name="remember" class="h-4 w-4 rounded" style="background-color: #0f1419; border-color: #374151;" />
              <span class="ml-2 text-sm" style="color: #9ca3af;">Recordarme</span>
            </label>
            <a href="/aula/recuperar" class="text-sm transition-colors hover:opacity-80" style="color: #38b1ff;">
              ¿Olvidaste tu contraseña?
            </a>
          </div>

          <div id="error-message" class="hidden p-4 rounded-lg" style="background-color: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3);">
            <p class="text-sm" style="color: #fca5a5;"></p>
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-3 px-4 font-semibold rounded-lg transition-colors hover:opacity-90 disabled:opacity-50 disabled:cursor-not-allowed"
            style="background-color: #0065ff; color: #ffffff;"
          >
            Iniciar Sesión
          </button>
        </form>

        <div class="mt-6 text-center">
          <p class="text-sm" style="color: #9ca3af;">
            ¿No tienes cuenta?
            <a href="/aula/registro" class="font-medium transition-colors hover:opacity-80" style="color: #38b1ff;">
              Regístrate aquí
            </a>
          </p>
        </div>
      </div>

      <!-- Back to home -->
      <div class="mt-6 text-center">
        <a href="/" class="text-sm transition-colors hover:opacity-80 inline-flex items-center gap-1" style="color: #6b7280;">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Volver a la web
        </a>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('login-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const errorDiv = document.getElementById('error-message') as HTMLDivElement;
    const errorText = errorDiv.querySelector('p') as HTMLParagraphElement;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;
      const returnUrl = formData.get('returnUrl') as string;

      // Disable button
      submitBtn.disabled = true;
      submitBtn.textContent = 'Iniciando sesión...';
      errorDiv.classList.add('hidden');

      try {
        const response = await fetch('/api/auth/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, password }),
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Error al iniciar sesión');
        }

        // Redirect to dashboard or return URL
        window.location.href = returnUrl || '/aula';
      } catch (error: any) {
        errorText.textContent = error.message || 'Error al iniciar sesión. Por favor, inténtalo de nuevo.';
        errorDiv.classList.remove('hidden');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Iniciar Sesión';
      }
    });
  </script>
</AulaAuthLayout>
