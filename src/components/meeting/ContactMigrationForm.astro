---
// Contact form for WordPress migration inquiries
---

<section class="pt-10 pb-20 bg-base-25">
  <div class="max-w-4xl mx-auto px-8 md:px-12 lg:px-24">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-base-900 mb-6">
        <span class="text-[#0052cc]">Solicita Información de tu Proyecto</span>
      </h1>
      <p class="text-xl text-base-600 max-w-3xl mx-auto">
        Completa el formulario y te responderemos en menos de 24 horas con más detalles sobre tu proyecto.
      </p>
    </div>

    <!-- Alert Container -->
    <div id="alert-container" class="mb-6 hidden"></div>

    <!-- Form Container -->
    <div class="bg-base-50 rounded-2xl shadow-xl overflow-hidden border border-base-200">
      <div class="bg-gradient-to-r from-[#0052cc] to-blue-600 px-6 py-4 text-white">
        <h3 class="text-lg font-semibold">Cuéntanos sobre tu proyecto</h3>
        <p class="text-sm opacity-90">Todos los campos son obligatorios</p>
      </div>

      <div class="p-8">
        <form id="migration-contact-form" class="space-y-6">
          <!-- Plan Selected (Hidden, populated from URL) -->
          <input type="hidden" id="plan-selected" name="plan" value="">

          <!-- Plan Display -->
          <div id="plan-display" class="bg-base-50 border-2 border-blue-500 rounded-lg p-4 hidden">
            <p class="text-sm text-base-800">
              <strong>Servicio/Plan seleccionado:</strong> <span id="plan-name" class="italic font-semibold text-blue-600"></span>
            </p>
          </div>

          <!-- Nombre -->
          <div>
            <label for="nombre" class="block text-sm font-medium text-base-700 mb-2">
              Nombre *
            </label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              required
              class="w-full px-4 py-3 border border-base-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
              placeholder="Tu nombre"
            />
          </div>

          <!-- Empresa -->
          <div>
            <label for="empresa" class="block text-sm font-medium text-base-700 mb-2">
              Empresa (opcional)
            </label>
            <input
              type="text"
              id="empresa"
              name="empresa"
              class="w-full px-4 py-3 border border-base-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
              placeholder="Nombre de tu empresa"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-base-700 mb-2">
              Email (opcional)
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 border border-base-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="telefono" class="block text-sm font-medium text-base-700 mb-2">
              Teléfono *
            </label>
            <input
              type="tel"
              id="telefono"
              name="telefono"
              required
              class="w-full px-4 py-3 border border-base-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
              placeholder="+34 600 000 000"
            />
          </div>

          <!-- Current WordPress URL (optional, only for migration projects) -->
          <div id="wordpress-url-field" class="hidden">
            <label for="wordpress-url" class="block text-sm font-medium text-base-700 mb-2">
              URL de tu WordPress actual (opcional)
            </label>
            <input
              type="url"
              id="wordpress-url"
              name="wordpress_url"
              class="w-full px-4 py-3 bg-white border border-base-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors text-base-900"
              placeholder="https://tuweb.com"
            />
          </div>

          <!-- Message -->
          <div>
            <label for="mensaje" class="block text-sm font-medium text-base-700 mb-2">
              Mensaje adicional (opcional)
            </label>
            <textarea
              id="mensaje"
              name="mensaje"
              rows="4"
              class="w-full px-4 py-3 border border-base-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors resize-none"
              placeholder="Cuéntanos sobre tu proyecto, páginas actuales, funcionalidades especiales..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            id="submit-btn"
            class="w-full bg-gradient-to-r from-[#0052cc] to-blue-600 hover:from-[#0041a3] hover:to-blue-700 text-white font-semibold py-4 px-8 rounded-lg transition-all duration-200 transform hover:scale-[1.02] shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <span id="btn-text">Enviar Solicitud</span>
            <span id="btn-spinner" class="hidden">
              <svg class="animate-spin inline-block h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Enviando...
            </span>
          </button>
        </form>

        <!-- Success Message (Hidden by default) - Outside form so it stays visible -->
        <div id="success-message" class="hidden mt-6">
          <div class="bg-gradient-to-r from-green-500 to-emerald-500 text-white rounded-2xl p-6 text-center shadow-xl">
            <div class="text-6xl mb-3">✅</div>
            <h4 class="text-2xl font-bold mb-2">¡Solicitud Enviada!</h4>
            <p class="text-green-100 text-lg">Te responderemos en menos de 24 horas.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Get plan from URL query parameter
  const urlParams = new URLSearchParams(window.location.search);
  const plan = urlParams.get('plan');

  if (plan) {
    const planInput = document.getElementById('plan-selected') as HTMLInputElement;
    const planDisplay = document.getElementById('plan-display');
    const planName = document.getElementById('plan-name');

    if (planInput) planInput.value = plan;
    if (planDisplay && planName) {
      planDisplay.classList.remove('hidden');

      // Map plan codes to display names
      const planNames: { [key: string]: string } = {
        // Migración WordPress
        'landing': 'Landing Page (450€)',
        'corporativa': 'Web Corporativa (800€)',
        'personalizada': 'Página Personalizada (1,000€ - 2,000€)',

        // Wazuh / Ciberseguridad
        'wazuh-implementacion': 'Implementación Wazuh',
        'wazuh-basico': 'Wazuh Básico',
        'wazuh-empresarial': 'Wazuh Empresarial',
        'wazuh-avanzado': 'Wazuh Avanzado',
        'wazuh-consultoria': 'Consultoría Wazuh',
        'wazuh-soporte': 'Soporte Wazuh',

        // Otros servicios
        'consultoria-ia': 'Consultoría IA',
        'desarrollo-web': 'Desarrollo Web',
        'automatizacion': 'Automatización de Procesos'
      };

      planName.textContent = planNames[plan] || plan;

      // Show WordPress URL field only for migration plans
      const wordpressUrlField = document.getElementById('wordpress-url-field');
      const migrationPlans = ['landing', 'corporativa', 'personalizada'];

      if (wordpressUrlField && migrationPlans.includes(plan)) {
        wordpressUrlField.classList.remove('hidden');
      }
    }
  }

  // Form submission
  const form = document.getElementById('migration-contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text');
  const btnSpinner = document.getElementById('btn-spinner');
  const successMessage = document.getElementById('success-message');
  const alertContainer = document.getElementById('alert-container');

  function showAlert(message: string, type: 'success' | 'error' = 'success') {
    if (!alertContainer) return;

    const bgColor = type === 'success' ? 'bg-green-50 border-green-200 text-green-800' : 'bg-red-50 border-red-200 text-red-800';
    const icon = type === 'success' ? '✅' : '❌';

    alertContainer.innerHTML = `
      <div class="${bgColor} border rounded-lg p-4">
        <p class="text-sm font-medium">${icon} ${message}</p>
      </div>
    `;
    alertContainer.classList.remove('hidden');

    // Auto-hide after 5 seconds
    setTimeout(() => {
      alertContainer.classList.add('hidden');
    }, 5000);
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Disable button and show spinner
    if (submitBtn) submitBtn.disabled = true;
    if (btnText) btnText.classList.add('hidden');
    if (btnSpinner) btnSpinner.classList.remove('hidden');

    // Get form data
    const formData = new FormData(form);
    const data = {
      nombre: formData.get('nombre'),
      email: formData.get('email'),
      telefono: formData.get('telefono'),
      wordpress_url: formData.get('wordpress_url'),
      empresa: formData.get('empresa') || '',
      mensaje: formData.get('mensaje') || '',
      plan: formData.get('plan') || 'No especificado'
    };

    try {
      const response = await fetch('/api/send-migration-contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        // Hide form and show success message
        form.classList.add('hidden');
        if (successMessage) successMessage.classList.remove('hidden');

        // Scroll to success message
        successMessage?.scrollIntoView({ behavior: 'smooth', block: 'center' });
      } else {
        throw new Error(result.error || 'Error al enviar el formulario');
      }
    } catch (error) {
      console.error('Error:', error);
      showAlert('Error al enviar la solicitud. Por favor, inténtalo de nuevo.', 'error');

      // Re-enable button
      if (submitBtn) submitBtn.disabled = false;
      if (btnText) btnText.classList.remove('hidden');
      if (btnSpinner) btnSpinner.classList.add('hidden');
    }
  });
</script>
