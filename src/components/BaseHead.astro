---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

const {
  title = "AI Security - Soluciones de IA y Ciberseguridad para Empresas",
  description = "Automatiza tu negocio con IA: chatbots inteligentes, gestión documental, atención telefónica 24/7 y ciberseguridad Wazuh/ENS para PyMEs.",
  canonical = "https://aisecurity.es/",
  ogImage = "https://aisecurity.es/og-image.png"
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content="inteligencia artificial empresas, automatización IA, chatbot empresarial, Wazuh, ENS, ciberseguridad, migración WordPress, gestor documental IA" />
<meta name="author" content="AI Security - aisecurity.es" />

<!-- Favicons -->
<link rel="icon" href="/favicon.png" type="image/png" />
<link rel="icon" href="/favicon.png" sizes="32x32" />
<link rel="shortcut icon" href="/favicon.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Apple Touch Icon (already included in favicons, but keeping for backwards compatibility) -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="#ffffff" />

<!-- JSON-LD Schema.org markup for better SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "AI Security",
  "url": "https://AIsecurity.es",
  "logo": "https://AIsecurity.es/favicon.png",
  "description": "Soluciones de inteligencia artificial y ciberseguridad para empresas. Automatización con IA, implementación de Wazuh y cumplimiento ENS.",
  "sameAs": [
    "https://www.youtube.com/@aisecurityes"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "Customer Service",
    "areaServed": "ES",
    "availableLanguage": "Spanish"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "ES"
  },
  "offers": [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Implementación de Wazuh",
        "description": "Instalación y configuración profesional de Wazuh para cumplimiento ENS"
      }
    },
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Automatización con IA",
        "description": "Chatbots inteligentes, gestión documental IA y automatización de procesos"
      }
    }
  ]
}
</script>

<!---- Alpine  -->
<script is:inline defer src="https://unpkg.com/alpinejs@3.10.5/dist/cdn.min.js">
</script>
