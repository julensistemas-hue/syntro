---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";

const sections = [
  {
    title: "Servicios",
    links: [
      { name: "Chatbot Inteligente", href: "/servicios/chatbot" },
      { name: "Gestor Documental IA", href: "/servicios/gestor-documental" },
      { name: "Gestor de Citas IA", href: "/servicios/gestor-citas" },
      { name: "Atención de Llamadas", href: "/servicios/atencion-llamadas" },
      { name: "Automatización", href: "/servicios/automatizacion" },
    ],
  },
  {
    title: "Empresa",
    links: [
      { name: "Solicitar Reunión", href: "/reunion" },
      { name: "FAQ", href: "/faq" },
      { name: "Términos de Servicio", href: "/terms" },
      { name: "Política de Privacidad", href: "/privacy" },
    ],
  },
  {
    title: "Seguridad",
    links: [
      { name: "Wazuh & ENS", href: "/wazuh" },
      { name: "Ciberseguridad", href: "/reunion" },
      { name: "Consultoría", href: "/reunion" },
    ],
  },
  {
    title: "Contacto",
    links: [
      { name: "Email", href: "mailto:info@aisecurity.es" },
      { name: "Agendar Consulta", href: "/reunion" },
    ],
  },
];
---

<footer
  class="relative border-t border-base-200 mt-0" style="background-color: black;">
  <div class="px-6 md:px-12 lg:px-20 py-20 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-16">
      <div class="md:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 hover:opacity-80 transition-opacity">
          <OptimizedImage width={40} src="/logo.svg" alt="AI SECURITY logo" />
          <span class="text-lg font-bold text-white">AI SECURITY</span>
        </a>
        <p class="mt-5 text-sm text-base-300 leading-relaxed">
          Soluciones de inteligencia artificial para empresas. Automatiza procesos,
          mejora la atención al cliente y optimiza tu operativa con tecnología de vanguardia.
        </p>
      </div>

      <div class="md:col-span-2">
        <h3 class="text-lg font-bold text-white mb-3">
          Suscríbete a nuestro boletín
        </h3>
        <p class="text-sm text-base-300 mb-5 leading-relaxed">
          Recibe casos de éxito, tendencias en IA y consejos prácticos para automatizar tu negocio.
        </p>
        <div id="newsletter-alert" class="mb-4 hidden"></div>
        <form id="newsletter-form" class="flex flex-col sm:flex-row items-stretch gap-3 w-full">
          <input
            type="email"
            id="newsletter-email"
            name="email"
            required
            placeholder="tu@empresa.com"
            aria-label="Correo electrónico"
            class="flex-1 px-4 py-3 border-2 border-base-300 rounded-lg shadow-sm focus:ring-2 focus:ring-accent-500 focus:border-accent-500 focus:outline-none transition-all text-base"
          />
          <button
            type="submit"
            id="newsletter-button"
            class="px-6 py-3 w-full sm:w-auto rounded-lg bg-accent-600 text-white font-semibold hover:bg-accent-700 transition-all shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed hover:-translate-y-0.5">
            <span id="newsletter-button-text">Suscribirse</span>
            <span id="newsletter-button-loading" class="hidden">Enviando...</span>
          </button>
        </form>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-sm">
      {
        sections.map(({ title, links }) => (
          <div>
            <h4 class="text-base font-bold text-white mb-5">{title}</h4>
            <ul class="space-y-3">
              {links.map(({ name, href }) => (
                <li>
                  <a
                    href={href}
                    class="text-base-300 hover:text-accent-400 inline-block transition-colors">
                    {name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="pt-10 mt-12 border-t border-base-700 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-base-400">
      <p>
        &copy; {new Date().getFullYear()} AI SECURITY. Todos los derechos reservados.
      </p>
      <p class="font-medium">Soluciones de inteligencia artificial para empresas</p>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('newsletter-form') as HTMLFormElement;
    const alertContainer = document.getElementById('newsletter-alert') as HTMLDivElement;
    const submitButton = document.getElementById('newsletter-button') as HTMLButtonElement;
    const buttonText = document.getElementById('newsletter-button-text') as HTMLSpanElement;
    const buttonLoading = document.getElementById('newsletter-button-loading') as HTMLSpanElement;
    const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;

    if (!form) return;

    function showAlert(message: string, type: 'success' | 'error') {
      alertContainer.className = `mb-4 p-3 rounded-md text-sm ${
        type === 'success'
          ? 'bg-green-50 border border-green-200 text-green-800'
          : 'bg-red-50 border border-red-200 text-red-800'
      }`;
      alertContainer.textContent = message;
      alertContainer.classList.remove('hidden');

      if (type === 'success') {
        setTimeout(() => {
          alertContainer.classList.add('hidden');
        }, 5000);
      }
    }

    function setLoading(loading: boolean) {
      submitButton.disabled = loading;
      if (loading) {
        buttonText.classList.add('hidden');
        buttonLoading.classList.remove('hidden');
      } else {
        buttonText.classList.remove('hidden');
        buttonLoading.classList.add('hidden');
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = emailInput.value.trim();

      if (!email) {
        showAlert('Por favor, ingresa un email válido', 'error');
        return;
      }

      setLoading(true);
      alertContainer.classList.add('hidden');

      try {
        const formData = new FormData();
        formData.append('email', email);

        const response = await fetch('/api/subscribe-newsletter', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (response.ok) {
          showAlert('¡Gracias por suscribirte! Revisa tu email para confirmar.', 'success');
          form.reset();
        } else {
          showAlert(data.error || 'Error al suscribirse. Inténtalo de nuevo.', 'error');
        }
      } catch (error) {
        console.error('Error:', error);
        showAlert('Error de conexión. Verifica tu internet e inténtalo de nuevo.', 'error');
      } finally {
        setLoading(false);
      }
    });
  });
</script>
