---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";
---

<header
  id="main-header"
  class="border-b border-base-200 sticky top-0 z-50 bg-base-50/95 backdrop-blur-md shadow-soft transition-all duration-300">
  <div class="w-full mx-auto px-6 max-w-7xl">
    <div
      x-data="{ open: false, dropdownOpen: false }"
      class="relative flex flex-col w-full py-4 mx-auto lg:items-center lg:justify-between lg:flex-row">

      <!-- Logo -->
      <div class="flex flex-row items-center justify-between lg:justify-start">
        <a href="/" class="text-base-900 inline-flex items-center gap-3 hover:opacity-80 transition-opacity">
          <OptimizedImage width={44} src="/logo.svg" alt="AI SECURITY logo" />
          <span class="font-bold text-xl tracking-tight">AI SECURITY</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          @click="open = !open"
          :aria-expanded="open.toString()"
          aria-controls="main-navigation"
          aria-label="Alternar menú de navegación"
          class="inline-flex items-center justify-center p-2.5 text-base-600 hover:text-base-900 hover:bg-base-100 rounded-lg focus:outline-none focus:text-base-900 lg:hidden transition-colors">
          <svg
            :class="{'rotate-90': open}"
            class="w-6 h-6 transition-transform duration-300 ease-in-out"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true">
            <path
              x-show="!open"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16">
            </path>
            <path
              x-show="open"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12">
            </path>
          </svg>
        </button>
      </div>

      <!-- Navigation -->
      <nav
        :class="{'flex': open, 'hidden': !open}"
        id="main-navigation"
        class="flex-col items-start gap-1 lg:flex lg:flex-row lg:items-center lg:gap-1 lg:ml-auto mt-4 lg:mt-0"
        role="navigation"
        aria-label="Navegación principal">

        <!-- Llamadas IA -->
        <a
          href="/servicios/atencion-llamadas"
          class="w-full lg:w-auto text-base font-medium text-base-800 transition-colors duration-200 hover:text-accent-600 hover:bg-accent-50 px-4 py-2.5 rounded-lg">
          Llamadas IA
        </a>

        <!-- Gestor Documental -->
        <a
          href="/servicios/gestor-documental"
          class="w-full lg:w-auto text-base font-medium text-base-800 transition-colors duration-200 hover:text-accent-600 hover:bg-accent-50 px-4 py-2.5 rounded-lg">
          Documental
        </a>

        <!-- Automatizaciones -->
        <a
          href="/servicios/automatizacion"
          class="w-full lg:w-auto text-base font-medium text-base-800 transition-colors duration-200 hover:text-accent-600 hover:bg-accent-50 px-4 py-2.5 rounded-lg">
          Automatizaciones
        </a>

        <!-- Wazuh -->
        <a
          href="/wazuh"
          class="w-full lg:w-auto text-base font-medium text-base-800 transition-colors duration-200 hover:text-red-600 hover:bg-red-50 px-4 py-2.5 rounded-lg">
          Wazuh
        </a>

        <!-- Dropdown: Más Servicios -->
        <div class="relative w-full lg:w-auto" @click.away="dropdownOpen = false">
          <button
            @click="dropdownOpen = !dropdownOpen"
            class="w-full lg:w-auto text-base font-medium text-base-800 transition-colors duration-200 hover:text-accent-600 hover:bg-accent-50 px-4 py-2.5 rounded-lg inline-flex items-center justify-between lg:justify-center gap-2"
            :aria-expanded="dropdownOpen.toString()">
            <span>Más Servicios</span>
            <svg class="w-4 h-4 transition-transform" :class="{'rotate-180': dropdownOpen}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            x-show="dropdownOpen"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-95"
            class="w-full lg:absolute lg:right-0 lg:w-56 mt-2 bg-base-50 rounded-xl shadow-lg border border-base-200 py-2 z-50"
            style="display: none;">
            <a
              href="/reunion"
              class="block px-4 py-2.5 text-base font-medium text-base-900 hover:bg-accent-50 hover:text-accent-600 transition-colors">
              Ciberseguridad
            </a>
            <a
              href="/soporte-tecnico"
              class="block px-4 py-2.5 text-base font-medium text-base-900 hover:bg-accent-50 hover:text-accent-600 transition-colors">
              Soporte IT
            </a>
            <a
              href="/reunion"
              class="block px-4 py-2.5 text-base font-medium text-base-900 hover:bg-accent-50 hover:text-accent-600 transition-colors">
              Copias de Seguridad
            </a>
          </div>
        </div>

        <!-- CTA Button -->
        <a
          href="/reunion"
          class="w-full lg:w-auto inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-accent-600 hover:bg-accent-700 text-sm font-bold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg hover:-translate-y-0.5 mt-2 lg:mt-0 lg:ml-2"
          style="color: #000000;">
          Solicitar Reunión
          <span
            class="bg-green-600 text-white text-[10px] px-2 py-0.5 rounded-full font-bold shadow-sm"
            aria-label="Consulta gratuita">
            GRATIS
          </span>
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      header?.classList.add('shadow-medium');
    } else {
      header?.classList.remove('shadow-medium');
    }
  });
</script>
