---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";
import ThemeToggle from "../theme/ThemeToggle.astro";
---

<header
  id="main-header"
  class="border-b border-base-200 sticky top-0 z-50 bg-base-50 shadow-sm transition-all duration-300">
  <div class="w-full mx-auto px-8 max-w-7xl lg:px-16">
    <div
      x-data="{ open: false }"
      class="relative flex flex-col w-full py-5 mx-auto lg:items-center lg:justify-between lg:flex-row lg:px-6">
      <div class="flex flex-row items-center justify-between lg:justify-start">
        <a href="/" class="text-base-900 inline-flex items-center gap-3">
          <OptimizedImage width={40} src="/logo.svg" alt="logo" />
          <span class="font-bold">AI SECURITY</span>
        </a>
        <button
          @click="open = !open"
          :aria-expanded="open.toString()"
          aria-controls="main-navigation"
          aria-label="Alternar menÃº de navegaciÃ³n"
          class="inline-flex items-center justify-center p-2 text-base-400 hover:text-base-900 focus:outline-none focus:text-base-900 lg:hidden">
          <svg
            :class="{'rotate-90': open}"
            class="w-6 h-6 transition-transform duration-300 ease-in-out"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              x-show="!open"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16">
            </path>
            <path
              x-show="open"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12">
            </path>
          </svg>
        </button>
      </div>
      <nav
        :class="{'h-auto': open, 'h-0': !open}"
        id="main-navigation"
        class="flex-col items-center flex-grow gap-6 lg:gap-8 flex overflow-hidden lg:pb-0 lg:flex lg:justify-end lg:h-auto lg:flex-row lg:ml-auto">
        <a
          href="/servicios/chatbot"
          class="text-sm font-medium text-base-800 transition duration-300 hover:text-[#0052cc]">
          Chatbot
        </a>
        <a
          href="/servicios/gestor-documental"
          class="text-sm font-medium text-base-800 transition duration-300 hover:text-[#0052cc]">
          Gestor Documental
        </a>
        <a
          href="/servicios/automatizacion"
          class="text-sm font-medium text-base-800 transition duration-300 hover:text-[#0052cc]">
          Automatizaciones IA
        </a>
        <a
          href="/wazuh"
          class="text-sm font-medium text-base-800 transition duration-300 hover:text-red-600 flex items-center gap-1">
          <span class="text-red-600">ðŸ”’</span>
          Wazuh & Seguridad
        </a>
        <a
          href="/soporte-tecnico"
          class="text-sm font-medium text-base-800 transition duration-300 hover:text-[#0052cc]">
          Soporte IT
        </a>
        <a
          href="/reunion"
          class="inline-flex items-center gap-2 px-4 py-2 bg-[#0052cc] hover:bg-[#003d99] text-white text-sm font-semibold rounded-lg transition duration-300 relative">
          Solicitar ReuniÃ³n
          <span
            class="bg-[#10b981] text-white text-[10px] px-2 py-0.5 rounded-full font-bold shadow-sm">
            GRATIS
          </span>
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      // Al hacer scroll: transparente con blur
      header?.classList.remove('bg-base-50', 'shadow-sm');
      header?.classList.add('bg-transparent', 'backdrop-blur-2xl');
    } else {
      // Arriba del todo: sÃ³lido
      header?.classList.remove('bg-transparent', 'backdrop-blur-2xl');
      header?.classList.add('bg-base-50', 'shadow-sm');
    }
  });
</script>