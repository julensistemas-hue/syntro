{
  "permissions": {
    "allow": [
      "Bash(Stop-Process -Force)",
      "Bash(ls:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(pnpm build:*)",
      "Bash(rm:*)",
      "Bash(node:*)",
      "Bash(cat:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)",
      "Bash(grep:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm dev)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "postgresql",
    "supabase",
    "github",
    "fetch",
    "youtube-transcript",
    "shadcn",
    "browsermcp"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST \"http://localhost:${MCP_VOICE_HOOKS_PORT:-5111}/api/hooks/stop\" || echo '{}'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "_voice-hooks__speak$",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST \"http://localhost:${MCP_VOICE_HOOKS_PORT:-5111}/api/hooks/pre-speak\" || echo '{}'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(?!.*_voice-hooks__)",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST \"http://localhost:${MCP_VOICE_HOOKS_PORT:-5111}/api/hooks/post-tool\" || echo '{}'"
          }
        ]
      }
    ]
  }
}
